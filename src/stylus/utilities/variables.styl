// Global

$small-screen = 600px
$small-screen-up = 601px
$medium-screen = 992px
$medium-screen-up = 993px
$large-screen = 1200px
$large-screen-up = 1201px

$small-and-down = unquote("only screen and (max-width : $small-screen)")
$small-and-up = unquote("only screen and (min-width : $small-screen-up)")

$medium-and-down = unquote("only screen and (max-width : $medium-screen)")
$medium-and-up = unquote("only screen and (min-width : $medium-screen-up)")

$large-and-down = unquote("only screen and (max-width : $large-screen)")
$large-and-up = unquote("only screen and (min-width : $large-screen-up)")

// Grid
$num-cols = 12
